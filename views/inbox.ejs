<!-- views/inbox.ejs -->

<h2>Pending User Requests</h2>
<ul>
    <% users.forEach(user => { %>
        <li>
            <strong>Name:</strong> <%= user.name %><br>
            <strong>Email:</strong> <%= user.email %><br>
            <strong>Occupation:</strong> <%= user.occupation %><br>
            <strong>Date&Time:</strong> <%= user.registerDayTime %><br>
            <strong>interested:</strong> <%= user.interestedIn %><br>
            <strong>Gender:</strong> <%= user.gender %><br>
            <strong>selected Trainer:</strong> <%= user.trainer %><br>
            <strong>Application:</strong> <%= user.status %><br>
          
            <form action="/admin/approve-user/<%= user._id %>" method="POST">
                <button type="submit">Approve</button>
            </form>
            <br>
            <form action="/admin/reject-user/<%= user._id %>" method="POST">
                <button type="submit">Reject</button>
            </form>
        </li>
    <% }); %>
</ul>
