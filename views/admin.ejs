    <!-- JavaScript to fetch content dynamically -->
   <script>
    function loadContent(page, link) {
        fetch(`/${page}`)
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                // Return either response.text() or response.json() depending on your server response
                return response.text(); // Assuming your server returns HTML
            })
            .then(html => {
                const initialContent = document.getElementById('initialContent');
                if (initialContent) {
                    initialContent.style.display = 'none'; // Hide initial content
                }
                document.getElementById('pgmain').innerHTML = html; // Replace with fetched content

                // Remove 'current' class from all links
                const links = document.querySelectorAll('#pgside a');
                links.forEach(l => l.classList.remove('current'));

                // Add 'current' class to the clicked link
                link.classList.add('current');
            })
            .catch(error => {
                console.error('Error loading content:', error);
                document.getElementById('pgmain').innerHTML = `<p>An error has occurred while loading the content: ${error.message}</p>`;
            });
    }
</script>

